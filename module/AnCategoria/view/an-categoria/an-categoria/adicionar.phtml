<?php
    $title = "Adicionando Categoria";
?>

<h1><?=$this->escapeHtml($title)?></h1>

<?php
$form->setAttribute('action',$this->url('an-categoria',['action' => 'adicionar']));
$form->prepare();

echo $this->form()->openTag($form);

	
$id = $this->form->get('id');
$descricao = $this->form->get('descricao');
